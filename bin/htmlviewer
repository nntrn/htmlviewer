#!/usr/bin/env node

const fs = require('fs')
const path = require('path')
const HtmlViewer = require('../src/htmlviewer')

const { getAllDirectoryFiles, createAndWrite, getUserHome, parseArgs } = require('../src/utils')

const args = process.argv.slice(2)

const _args = {
  ...parseArgs(args.slice(0, -1)),
  directory: path.resolve(args.slice(-1)[0])
}

const hv = new HtmlViewer(_args)

hv.printenv()
